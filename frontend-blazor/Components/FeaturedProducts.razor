@using NeonGadgetStore.Web.Models
@using NeonGadgetStore.Web.Services
@using NeonGadgetStore.Web.Components
@inject ApiService ApiService

<section class="py-20 bg-secondary/30">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-12">
            <div>
                <h2 class="text-3xl md:text-4xl font-bold mb-2 animate-fade-up">
                    Featured <span class="text-gradient-primary">Products</span>
                </h2>
                <p class="text-muted-foreground animate-fade-up stagger-1">
                    Discover our most popular tech products
                </p>
            </div>
            <a href="/category/phones" class="btn btn-outline btn-md rounded-xl animate-fade-up stagger-2">
                View All
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
            </a>
        </div>

        @if (_isLoading)
        {
            <div class="text-center py-12">
                <div class="animate-spin w-12 h-12 border-4 border-primary border-t-transparent rounded-full mx-auto"></div>
                <p class="mt-4 text-muted-foreground">Loading products...</p>
            </div>
        }
        else if (!string.IsNullOrEmpty(_error))
        {
            <div class="text-center py-12 bg-destructive/10 rounded-2xl">
                <svg class="w-16 h-16 mx-auto text-destructive mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <p class="text-destructive font-medium">@_error</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @{ var index = 0; }
                @foreach (var product in featuredProducts)
                {
                    <ProductCard Product="product" Index="index" />
                    index++;
                }
            </div>
        }
    </div>
</section>

@code {
    private List<Product> featuredProducts = new();
    private bool _isLoading = true;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        _error = null;
        
        try
        {
            featuredProducts = await ApiService.GetFeaturedProductsAsync();
            
            if (!featuredProducts.Any())
            {
                _error = "No featured products available. Please check if the backend server is running.";
            }
        }
        catch (Exception ex)
        {
            _error = $"Failed to load products. Please ensure the backend server is running. Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }
}
