@if (_isOpen)
{
    <!-- Chat Window -->
    <div class="fixed bottom-24 right-6 z-40 w-80 md:w-96 bg-card rounded-2xl shadow-2xl border border-border overflow-hidden animate-scale-in">
        <!-- Header -->
        <div class="gradient-primary p-4 text-white">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-semibold">Support Chat</h3>
                        <p class="text-xs text-white/80">We're here to help!</p>
                    </div>
                </div>
                <button @onclick="ToggleChat" class="btn btn-ghost btn-icon text-white hover:bg-white/10 rounded-full">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Messages -->
        <div class="h-80 overflow-y-auto p-4 space-y-4">
            <!-- Bot Message -->
            <div class="flex gap-3">
                <div class="w-8 h-8 rounded-full gradient-primary flex-shrink-0 flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <div class="bg-secondary rounded-2xl rounded-tl-none p-3 max-w-[80%]">
                    <p class="text-sm">Hi there! ðŸ‘‹ How can I help you today?</p>
                </div>
            </div>

            @foreach (var message in _messages)
            {
                @if (message.IsUser)
                {
                    <div class="flex gap-3 justify-end">
                        <div class="gradient-primary rounded-2xl rounded-tr-none p-3 max-w-[80%]">
                            <p class="text-sm text-white">@message.Text</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="flex gap-3">
                        <div class="w-8 h-8 rounded-full gradient-primary flex-shrink-0 flex items-center justify-center">
                            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div class="bg-secondary rounded-2xl rounded-tl-none p-3 max-w-[80%]">
                            <p class="text-sm">@message.Text</p>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Input -->
        <div class="p-4 border-t border-border">
            <form @onsubmit="SendMessage" @onsubmit:preventDefault class="flex gap-2">
                <input type="text" 
                       placeholder="Type your message..." 
                       @bind="_inputMessage"
                       class="flex-1 h-10 px-4 rounded-xl bg-secondary border-0 focus:ring-2 focus:ring-primary outline-none text-sm" />
                <button type="submit" class="btn btn-primary btn-icon rounded-xl">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                </button>
            </form>
        </div>
    </div>
}

<!-- Chat Button -->
<button @onclick="ToggleChat" 
        class="fixed bottom-6 right-20 z-40 btn btn-primary w-14 h-14 rounded-full shadow-lg shadow-primary/30 hover:scale-110 transition-transform">
    @if (_isOpen)
    {
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    }
    else
    {
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
        </svg>
    }
</button>

@code {
    private bool _isOpen = false;
    private string _inputMessage = string.Empty;
    private List<ChatMessage> _messages = new();

    private record ChatMessage(string Text, bool IsUser);

    private void ToggleChat()
    {
        _isOpen = !_isOpen;
    }

    private void SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_inputMessage)) return;

        _messages.Add(new ChatMessage(_inputMessage, true));
        var userMessage = _inputMessage;
        _inputMessage = string.Empty;

        // Simple bot response
        Task.Run(async () =>
        {
            await Task.Delay(1000);
            await InvokeAsync(() =>
            {
                _messages.Add(new ChatMessage(GetBotResponse(userMessage), false));
                StateHasChanged();
            });
        });
    }

    private string GetBotResponse(string message)
    {
        var lower = message.ToLower();
        
        if (lower.Contains("shipping") || lower.Contains("delivery"))
            return "We offer free shipping on orders over $50! Standard delivery takes 3-5 business days.";
        
        if (lower.Contains("return") || lower.Contains("refund"))
            return "Our return policy allows returns within 30 days of purchase. Items must be unused and in original packaging.";
        
        if (lower.Contains("price") || lower.Contains("discount"))
            return "Check out our current promotions! We have up to 50% off on selected items. ðŸŽ‰";
        
        if (lower.Contains("help") || lower.Contains("support"))
            return "I'm here to help! You can ask me about shipping, returns, products, or any other questions.";
        
        return "Thanks for your message! Our team will get back to you soon. Is there anything specific I can help you with?";
    }
}
