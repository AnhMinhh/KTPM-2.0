@page "/product/{ProductId}"
@using NeonGadgetStore.Web.Services
@inject ApiService ApiService
@inject CartService CartService
@inject ToastService ToastService

<PageTitle>@_product?.Name - ElectroHub</PageTitle>

@if (_product != null)
{
    <div class="min-h-screen pt-24 pb-20">
        <div class="container mx-auto px-4">
            <!-- Breadcrumb -->
            <nav class="flex items-center gap-2 text-sm text-muted-foreground mb-8">
                <a href="/" class="hover:text-primary transition-colors">Home</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <a href="/category/@_product.Category" class="hover:text-primary transition-colors capitalize">@_product.Category</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="text-foreground">@_product.Name</span>
            </nav>

            <div class="grid lg:grid-cols-2 gap-12">
                <!-- Product Images -->
                <div class="space-y-4">
                    <div class="aspect-square rounded-2xl overflow-hidden bg-secondary">
                        <img src="@_product.Image" alt="@_product.Name" 
                             class="w-full h-full object-cover" />
                    </div>
                </div>

                <!-- Product Info -->
                <div class="space-y-6">
                    <!-- Badge -->
                    @if (_discount > 0)
                    {
                        <span class="inline-block px-3 py-1 rounded-full gradient-accent text-accent-foreground text-sm font-semibold">
                            -@_discount% OFF
                        </span>
                    }

                    <h1 class="text-3xl md:text-4xl font-bold">@_product.Name</h1>

                    <!-- Rating -->
                    <div class="flex items-center gap-4">
                        <div class="flex items-center gap-1">
                            @for (int i = 0; i < 5; i++)
                            {
                                var filled = i < (int)_product.Rating;
                                <svg class="w-5 h-5 @(filled ? "fill-accent text-accent" : "fill-muted text-muted")" viewBox="0 0 24 24">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                </svg>
                            }
                        </div>
                        <span class="font-medium">@_product.Rating.ToString("0.0")</span>
                        <span class="text-muted-foreground">(@_product.Reviews reviews)</span>
                    </div>

                    <!-- Price -->
                    <div class="flex items-baseline gap-4">
                        <span class="text-4xl font-bold text-primary">$@_product.Price</span>
                        @if (_product.OriginalPrice.HasValue)
                        {
                            <span class="text-xl text-muted-foreground line-through">$@_product.OriginalPrice</span>
                        }
                    </div>

                    <!-- Description -->
                    <p class="text-muted-foreground text-lg leading-relaxed">
                        @_product.Description
                    </p>

                    <!-- Features -->
                    @if (_product.Features.Any())
                    {
                        <div class="space-y-3">
                            <h3 class="font-semibold">Key Features:</h3>
                            <ul class="space-y-2">
                                @foreach (var feature in _product.Features)
                                {
                                    <li class="flex items-center gap-2 text-muted-foreground">
                                        <svg class="w-5 h-5 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                        </svg>
                                        @feature
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    <!-- Stock Status -->
                    <div class="flex items-center gap-2">
                        @if (_product.InStock)
                        {
                            <span class="w-3 h-3 rounded-full bg-green-500"></span>
                            <span class="text-green-500 font-medium">In Stock</span>
                        }
                        else
                        {
                            <span class="w-3 h-3 rounded-full bg-red-500"></span>
                            <span class="text-red-500 font-medium">Out of Stock</span>
                        }
                    </div>

                    <!-- Quantity & Add to Cart -->
                    <div class="flex items-center gap-4 pt-4">
                        <div class="flex items-center gap-2 bg-secondary rounded-xl p-1">
                            <button @onclick="() => _quantity = Math.Max(1, _quantity - 1)" 
                                    class="btn btn-ghost btn-icon rounded-lg">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                                </svg>
                            </button>
                            <span class="w-12 text-center font-semibold text-lg">@_quantity</span>
                            <button @onclick="() => _quantity++" 
                                    class="btn btn-ghost btn-icon rounded-lg">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                            </button>
                        </div>
                        
                        <button @onclick="AddToCart" 
                                disabled="@(!_product.InStock)"
                                class="flex-1 btn btn-primary btn-lg rounded-xl">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            Add to Cart
                        </button>

                        <button class="btn btn-outline btn-icon btn-lg rounded-xl">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                        </button>
                    </div>

                    <!-- Shipping Info -->
                    <div class="grid grid-cols-2 gap-4 pt-6 border-t border-border">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium">Free Shipping</p>
                                <p class="text-sm text-muted-foreground">On orders over $50</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium">Easy Returns</p>
                                <p class="text-sm text-muted-foreground">30-day return policy</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <Footer />
}
else
{
    <div class="min-h-screen pt-24 flex items-center justify-center">
        <div class="text-center">
            <h1 class="text-2xl font-bold mb-4">Product not found</h1>
            <a href="/" class="btn btn-primary btn-md rounded-xl">Back to Home</a>
        </div>
    </div>
}

@code {
    [Parameter]
    public string ProductId { get; set; } = string.Empty;

    private Product? _product;
    private int _quantity = 1;
    private bool _isLoading = true;
    private string? _error;
    private int _discount => _product?.OriginalPrice.HasValue == true 
        ? (int)Math.Round((1 - _product.Price / _product.OriginalPrice.Value) * 100) 
        : 0;

    protected override async Task OnParametersSetAsync()
    {
        _isLoading = true;
        _error = null;
        
        try
        {
            _product = await ApiService.GetProductAsync(ProductId);
            
            if (_product == null)
            {
                _error = "Product not found. Please ensure the backend server is running.";
            }
        }
        catch (Exception ex)
        {
            _error = $"Failed to load product. Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
        _quantity = 1;
    }

    private async Task AddToCart()
    {
        if (_product == null) return;

        for (int i = 0; i < _quantity; i++)
        {
            await CartService.AddToCartAsync(_product);
        }
        
        ToastService.ShowSuccess("Added to cart", $"{_quantity}x {_product.Name} added to your cart");
    }
}
