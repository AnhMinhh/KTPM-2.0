@page "/payment-cancel"
@inject NavigationManager Navigation

<PageTitle>Payment Cancelled - ElectroHub</PageTitle>

<div class="min-h-screen flex items-center justify-center px-4 py-24">
    <div class="text-center max-w-md">
        <div class="w-24 h-24 mx-auto mb-8 rounded-full bg-yellow-500/10 flex items-center justify-center">
            <svg class="w-12 h-12 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
        
        <h1 class="text-3xl font-bold mb-4">Payment Cancelled</h1>
        <p class="text-muted-foreground mb-8">
            Your payment was cancelled. Don't worry, your cart items are still saved.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/cart" class="btn btn-primary btn-lg rounded-xl">
                Return to Cart
            </a>
            <a href="/" class="btn btn-outline btn-lg rounded-xl">
                Continue Shopping
            </a>
        </div>
    </div>
</div>

