@page "/orders"
@using NeonGadgetStore.Web.Services
@using NeonGadgetStore.Web.Models
@inject ApiService ApiService
@inject AuthStateService AuthService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>My Orders - ElectroHub</PageTitle>

<div class="min-h-screen pt-24 pb-20">
    <div class="container mx-auto px-4">
        @if (!AuthService.IsAuthenticated)
        {
            <div class="text-center py-20">
                <svg class="w-32 h-32 mx-auto text-muted-foreground/30 mb-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <h2 class="text-2xl font-semibold mb-4">Please sign in</h2>
                <p class="text-muted-foreground mb-8">You need to be logged in to view your orders.</p>
                <a href="/auth" class="btn btn-primary btn-lg rounded-xl">
                    Sign In
                </a>
            </div>
        }
        else
        {
            <h1 class="text-3xl md:text-4xl font-bold mb-8">My Orders</h1>

            @if (!orders.Any())
            {
                <div class="text-center py-20">
                    <svg class="w-32 h-32 mx-auto text-muted-foreground/30 mb-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                    <h2 class="text-2xl font-semibold mb-4">No orders yet</h2>
                    <p class="text-muted-foreground mb-8">You haven't placed any orders yet.</p>
                    <a href="/" class="btn btn-primary btn-lg rounded-xl">
                        Start Shopping
                    </a>
                </div>
            }
            else
            {
                <div class="space-y-4">
                    @foreach (var order in orders)
                    {
                        <div class="bg-card rounded-2xl border border-border overflow-hidden">
                            <!-- Order Header -->
                            <div class="flex flex-wrap items-center justify-between gap-4 p-6 bg-secondary/50 border-b border-border">
                                <div class="flex flex-wrap gap-6">
                                    <div>
                                        <span class="text-xs text-muted-foreground">Order ID</span>
                                        <p class="font-mono font-medium">#@order.Id</p>
                                    </div>
                                    <div>
                                        <span class="text-xs text-muted-foreground">Date</span>
                                        <p class="font-medium">@order.CreatedAt.ToString("MMM dd, yyyy")</p>
                                    </div>
                                    <div>
                                        <span class="text-xs text-muted-foreground">Total</span>
                                        <p class="font-bold text-primary">$@order.Total.ToString("0.00")</p>
                                    </div>
                                </div>
                                <div class="flex items-center gap-4">
                                    <span class="@GetStatusClass(order.Status) px-3 py-1 rounded-full text-sm font-medium">
                                        @order.Status
                                    </span>
                                    <a href="/orders/@order.Id" class="btn btn-outline btn-sm rounded-lg">
                                        View Details
                                    </a>
                                </div>
                            </div>

                            <!-- Order Items -->
                            <div class="p-6">
                                <div class="flex flex-wrap gap-4">
                                    @foreach (var item in order.Items.Take(4))
                                    {
                                        <div class="flex items-center gap-4 p-3 bg-secondary rounded-xl min-w-[250px]">
                                            <img src="@item.Product.Image" alt="@item.Product.Name" 
                                                 class="w-16 h-16 object-cover rounded-lg" />
                                            <div>
                                                <p class="font-medium line-clamp-1">@item.Product.Name</p>
                                                <p class="text-sm text-muted-foreground">Qty: @item.Quantity</p>
                                            </div>
                                        </div>
                                    }
                                    @if (order.Items.Count > 4)
                                    {
                                        <div class="flex items-center justify-center p-3 bg-secondary rounded-xl min-w-[100px]">
                                            <span class="text-muted-foreground">+@(order.Items.Count - 4) more</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    </div>
</div>

<Footer />

@code {
    private List<Order> orders = new();
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        AuthService.OnChange += StateHasChanged;
        await LoadOrdersAsync();
    }

    private async Task LoadOrdersAsync()
    {
        _isLoading = true;
        
        // Try to get orders from API
        orders = await ApiService.GetOrdersAsync();
        
        _isLoading = false;
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Delivered" => "bg-green-500/10 text-green-500",
            "In Transit" => "bg-blue-500/10 text-blue-500",
            "Processing" => "bg-yellow-500/10 text-yellow-500",
            "Cancelled" => "bg-red-500/10 text-red-500",
            _ => "bg-secondary text-muted-foreground"
        };
    }

    public void Dispose()
    {
        AuthService.OnChange -= StateHasChanged;
    }
}
